{
  "name": "addressbook-api",
  "version": "1.0.0",
  "main": "src/app.js",
  "repository": "https://github.com/JozefCipa/strv-task.git",
  "author": "Jozef Cipa <cipa.jozef@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "nodemon src/app.js | pino-pretty",
    "test": "NODE_ENV=test jest",
    "test:coverage": "yarn test --coverage",
    "lint": "eslint src/",
    "infra:start": "cd docker && docker-compose up -d && cd ../",
    "docs": "npx jsdoc -r src/ -d ./docs",
    "docs:show": "open docs/index.html"
  },
  "engines": {
    "node": "v10.7.0"
  },
  "devDependencies": {
    "@strv/eslint-config-javascript": "^9.1.0",
    "eslint": "^5.9.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jsdoc": "^3.5.5",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.7",
    "pino-pretty": "^2.4.0"
  },
  "dependencies": {
    "bcrypt": "^3.0.2",
    "dotenv": "^6.1.0",
    "firebase-admin": "^6.3.0",
    "joi": "^14.3.0",
    "jsonwebtoken": "^8.4.0",
    "kcors": "^2.2.2",
    "koa": "^2.6.2",
    "koa-body": "^4.0.4",
    "koa-compress": "^3.0.0",
    "koa-helmet": "^4.0.0",
    "koa-router": "^7.4.0",
    "mongoose": "^5.3.14",
    "pino": "^5.9.0",
    "ramda": "^0.26.1",
    "uuid": "^3.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "config/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
